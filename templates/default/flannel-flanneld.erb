FLANNEL_ETCD_KEY="/coreos.com/network"

# Secure ETCD configuration parameters go under here when node['kubernetes']['secure']['enabled']
<% if node['kubernetes']['secure']['enabled'] -%>
FLANNEL_ETCD="https://<%= @etcd_client_host %>:<%= @etcd_client_port %>"
FLANNEL_OPTIONS="-etcd-certfile=<%= @etcd_cert_dir %>/client.srv.crt -etcd-keyfile=<%= @etcd_cert_dir %>/client.srv.key -etcd-cafile=<%= @etcd_cert_dir %>/client.ca.crt"
<% else -%>
# Secure ETCD configuration parameters go under here when node['kubernetes']['secure']['enabled']
FLANNEL_ETCD="http://<%= @etcd_client_host %>:<%= @etcd_client_port %>"
<% end -%>
